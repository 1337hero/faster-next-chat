# Server port for Hono API
PORT=3001

# API Key Encryption (REQUIRED - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
API_KEY_ENCRYPTION_KEY=

# Legacy API Keys (DEPRECATED - use admin UI to manage providers)
# These will be auto-imported on first run if API_KEY_ENCRYPTION_KEY is set
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Local/self-hosted provider (optional)
OLLAMA_BASE_URL=http://localhost:11434

# Database
DATABASE_URL=sqlite://./data/chat.db

# Application URL (for CORS in production)
# In development, all localhost origins are allowed
APP_URL=http://localhost:3000

# Environment
NODE_ENV=development
